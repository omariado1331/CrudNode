 {{! Formulario para editar un registro }} 
<div class="container p-4"></div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> EDITAR UN REGISTRO</h3>
                    <div class="card-body">
                        <form action="/edit/{{persona.id}}" method="post">
                            <div class="input-group mt-2">
                                <label for="name" class="input-group-text">Nombre</label>
                                <input class="form-control" type="text" name="name" id="name" value="{{persona.name}}" 
                                placeholder="Ejemplo: Omar Alejandro" autofocus required>
                            </div>
                            <div class="input-group mt-2">
                                <label for="lastname" class="input-group-text">Apellido</label>
                                <input class="form-control" type="text" name="lastname" id="lastname" value="{{persona.lastname}}"
                                placeholder="Ejemplo: Calle Guachalla" required>
                            </div>
                            <div class="input-group mt-2">
                                <label for="name" class="input-group-text">Edad</label>
                                <input class="form-control" type="number" name="age" id="age" value="{{persona.age}}"
                                required>
                            </div>
                            <div class="form-group mt-4 d-grip gap-2">
                                <button class="btn btn-success"> Actualizar </button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>